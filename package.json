{
  "name": "scrollify",
  "version": "1.0.0",
  "description": "A React project with esbuild, Tailwind CSS, and TypeScript",
  "type": "module",
  "main": "index.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ],
    "tailwindStylesheet": "./src/App.css"
  },
  "scripts": {
    "dev:all": "concurrently --kill-others \"npm run dev:fe\" \"npm run dev:api\"",
    "dev:fe": "concurrently --kill-others \"npm run build:css\" \"shx cp index.html public/ && npm run build:js\"",
    "dev:api": "vercel dev",
    "build:js": "node esbuild.config.js",
    "build": "npm run build:css:once && node esbuild.config.js production && shx cp index.html public/",
    "build:css": "tailwindcss -i src/index.css -o public/index.css --watch",
    "build:css:once": "tailwindcss -i src/index.css -o public/index.css",
    "publish": "vercel"
  },
  "keywords": [
    "react",
    "typescript",
    "tailwind"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@phosphor-icons/react": "^2.1.10",
    "color.js": "1.2.0",
    "node-fetch": "^3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "esbuild": "^0.25.8",
    "postcss": "^8.4.32",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "shx": "^0.4.0",
    "typescript": "^5.3.3",
    "vercel": "^44.7.3"
  }
}
